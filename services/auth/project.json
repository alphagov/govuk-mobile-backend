{
  "name": "auth",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ./scripts/samBuild.js --projects=auth"
      }
    },
    "sam:validate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ./scripts/samValidate.js --projects=auth"
      }
    },
    "sam:deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node ./scripts/samDeploy.js --projects=auth"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["services/auth/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "checkov": {
      "executor": "nx:run-commands",
      "options": {
        "command": "checkov --framework cloudformation --quiet -d . -o cli -o junitxml --output-file-path console,checkov.xml"
      }
    },
    "test:unit": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest services/auth/**/* --project unit"
      }
    },
    "test:acc": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest services/auth/**/* --project acc"
      },
      "outputs": ["{options.outputFile}"]
    },
    "test:int": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest services/auth/**/* --project int"
      },
      "outputs": ["{options.outputFile}"]
    },
    "test:functional": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run test --project functional",
        "cwd": "auth"
      },
      "outputs": ["{options.outputFile}"]
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run services/auth/**/* --coverage --project unit"
      }
    }
  }
}
