{
  "name": "chat",
  "description": "GOVUK Chat integration",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "bundle": "node ./bundle.js",
    "build": "npm run bundle && sam build",
    "local:start-api": "npm run build && sam local start-api",
    "test": "vitest run",
    "test:acc": "vitest acc",
    "test:int": "vitest int",
    "test:unit": "vitest unit",
    "test:coverage": "vitest run --coverage --project unit",
    "test:validate": "sam validate",
    "test:integration": "vitest run --project integration"
  },
  "dependencies": {
    "@aws-lambda-powertools/parameters": "^2.24.1",
    "@aws-sdk/client-secrets-manager": "^3.312.0",
    "aws-jwt-verify": "^5.1.0",
    "aws-lambda": "^1.0.0",
    "esbuild": "^0.25.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.92",
    "@types/node": "^20.5.7",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "vitest": "^3.1.1"
  }
}
