{
  "name": "chat",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "targets": {
    "sam:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ./scripts/samBuild.js --project=chat"
      }
    },
    "sam:deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["sam:build"],
      "options": {
        "command": "node ./scripts/samDeploy.js --project=chat"
      }
    },
    "sam:validate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ./scripts/samValidate --projects=chat"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["services/chat/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "checkov": {
      "executor": "nx:run-commands",
      "options": {
        "command": "checkov --framework cloudformation --quiet -d services/chat -o cli -o junitxml --output-file-path reports/infrastructure --external-checks-dir ./.checkov --skip-check CKV_AWS_73,CKV_AWS_115,CKV_AWS_116,CKV_AWS_117,CKV_AWS_120"
      }
    },
    "test:unit": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest services/chat/**/* --project unit"
      }
    },
    "test:acc": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest services/chat/**/* --project acc"
      },
      "outputs": ["{options.outputFile}"]
    },
    "test:int": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest services/chat/**/* --project int"
      },
      "outputs": ["{options.outputFile}"]
    },
    "test:functional": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --dir chat --project functional"
      },
      "outputs": ["{options.outputFile}"]
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run services/chat/**/* --coverage --project unit"
      }
    }
  }
}
