FROM nginx:alpine

# Install OpenSSL for certificate generation
RUN apk add --no-cache openssl

# Create directories for certificates and logs
RUN mkdir -p /etc/nginx/certs /var/log/nginx

# Copy nginx configuration
COPY nginx.conf /etc/nginx/nginx.conf

# Copy scripts
COPY scripts/generate-certs.sh /usr/local/bin/generate-certs.sh
COPY scripts/start-nginx.sh /usr/local/bin/start-nginx.sh

# Make scripts executable
RUN chmod +x /usr/local/bin/generate-certs.sh /usr/local/bin/start-nginx.sh

# Expose ports
EXPOSE 80 443

# Use our startup script
CMD ["/usr/local/bin/start-nginx.sh"]
