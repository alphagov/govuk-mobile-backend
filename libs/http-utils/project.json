{
  "name": "@libs/http-utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/http-utils/src/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "checkov": {
      "executor": "nx:run-commands",
      "options": {
        "command": "checkov --framework cloudformation --quiet -d . -o cli -o junitxml --output-file-path console,checkov.xml"
      }
    },
    "test:unit": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest libs/http-utils/src/**/* --project unit"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run libs/http-utils/src/**/* --coverage --project unit"
      }
    }
  }
}
