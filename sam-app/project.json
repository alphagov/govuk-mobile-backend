{
    "name": "sam-app",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "targets": {
        "install": {
            "cache": true,
            "executor": "nx:run-commands",
            "options": {
                "command": "npm i",
                "cwd": "sam-app"
            }
        },
        "build": {
            "cache": true,
            "executor": "nx:run-commands",
            "outputs": [
                "{options.outputFile}"
            ],
            "dependsOn": [
                "install"
            ],
            "options": {
                "command": "npm i && npm run compile",
                "cwd": "sam-app/hello-world"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "./**/*.{ts,tsx,js,jsx}"
                ]
            }
        },
        "test:unit": {
            "dependsOn": [
                "install"
            ],
            "executor": "nx:run-commands",
            "options": {
                "command": "npm run unit",
                "cwd": "sam-app/hello-world"
            },
            "outputs": [
                "{workspaceRoot}/reports/unit"
            ]
        },
        "test:infrastructure": {
            "dependsOn": [
                "install"
            ],
            "executor": "nx:run-commands",
            "options": {
                "command": "npm run test:infrastructure",
                "cwd": "sam-app"
            },
            "outputs": [
                "{workspaceRoot}/reports/infrastructure"
            ]
        }
    }
}