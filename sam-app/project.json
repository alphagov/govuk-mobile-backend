{
    "name": "sam-app",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "targets": {
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "./**/*.{ts,tsx,js,jsx}"
                ]
            }
        },
        "test:infrastructure": {
            "executor": "nx:run-commands",
            "options": {
                "command": "npm run test:infrastructure",
                "cwd": "sam-app"
            },
            "outputs": [
                "{workspaceRoot}/reports/infrastructure"
            ]
        }
    }
}